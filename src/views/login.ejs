<!-- Esta clase es una vista que contiene el formulario para iniciar sesión en la aplicación -->
<%- include ('partials/_header_login_register') %>

<% if (success && success.length > 0) { %>
    <div class="container" id="contenedorLogin"
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= success %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                </div>
            </div>
        </div>
    </div>
    <% }%>
    <div class="container p-5">
        <div class="row" id="cuadroSesion">
 
            <div class=" mx-auto" >
                <div class="card-header" id="inicioSesion">
                    <div class="card text-center">
                        <h3>Inicia sesión</h3>
                        <div class="card-body">


                            <form action="/inicioDeSesion" method="POST" id="login-form">

                                <div class="inner-addon left-addon">
                                    <i class="fa fa-address-card"></i>
                                        <input type="text" name="codigo" placeholder="Introduzca su código" class="form-control" required autofocus>
                                </div>
                                <br>

                                <div class="inner-addon left-addon">
                                    <i class="fa fa-unlock-alt"></i>
                                        <input type="password" name="contrasena" placeholder="Introduzca su contraseña" class="form-control" required autofocus>
                                </div>
                                <br>
                                <button type="submit" class="btn btn-primary"> Ingresar </button>
                            </form>
                            <hr>
                                <input type="button" class="btn btn-success" value="Regístrate" onClick="window.location.href='/registrarVista'"> 
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


<%- include ('partials/_footer') %>
